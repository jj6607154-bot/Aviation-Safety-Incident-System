<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<connectionStrings>
		<!--
      数据库连接字符串（附加本机用户目录中的 hw.mdf）
      小白解读：
      - 我们把 DataDirectory 改到 `%LOCALAPPDATA%\AviationDb`，并在启动时将项目内的数据库文件复制过去；
      - 这样 LocalDB 可以顺利附加，不会遇到 d:\ 路径的权限问题；
      - 如果你改用正式 SQL Server，请把连接字符串换成 `Initial Catalog=...` 的方式。
    -->
		<add name="AviationDb" connectionString="Data Source=(LocalDB)\MSSQLLocalDB;Initial Catalog=AviationDb;Integrated Security=True;Connect Timeout=30;MultipleActiveResultSets=True" providerName="System.Data.SqlClient" />
	</connectionStrings>
	<appSettings>
		<!-- 后端 API 地址 -->
		<add key="ApiBase" value="http://localhost:3000/api" />
		<!--
      关闭 WebForms 的“非侵入式验证”模式（UnobtrusiveValidationMode）。
      小白讲解：这个模式需要 jQuery 的脚本映射，如果没配置就会报错。
      我们先全局关闭它，让验证器不再依赖 jQuery。
    -->
		<add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
		<!-- 角色注册口令（小白解读）：
         为了防止任何人都能注册管理员/审核，我们给这两个角色设置“注册口令”。
         只有输入正确口令的人才能注册为对应角色。请根据你的需要修改为更安全的值。 -->
		<add key="AdminRegisterKey" value="ADMIN-REGISTER-KEY" />
		<add key="AuditorRegisterKey" value="AUDITOR-REGISTER-KEY" />
	</appSettings>
	<system.web>
		<compilation debug="true" targetFramework="4.7.2" />
		<customErrors mode="Off" />
		<pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID" />
		<authentication mode="None" />
		<httpRuntime targetFramework="4.7.2" />
	</system.web>
    <system.webServer>
        <defaultDocument>
            <files>
                <clear />
                <add value="Default.aspx" />
            </files>
        </defaultDocument>
    </system.webServer>
</configuration>